<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_solution"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fruit"

    tools:context="kagura.project.com.a8.association.Encyclopedie">

    <ImageView
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:id="@+id/fruitArbre"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/fruitGraine"
        android:layout_alignStart="@+id/fruitGraine"
        android:contentDescription="@string/fruit_arbre" />

    <ImageView
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:id="@+id/fruitPlein"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/fruitArbre"
        android:layout_toStartOf="@+id/fruitArbre"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:contentDescription="@string/fruit_plein" />

    <ImageView
        android:layout_width="330dp"
        android:layout_height="350dp"
        android:id="@+id/fruitCoupe"
        android:layout_alignTop="@+id/fruitGraine"
        android:layout_alignLeft="@+id/fruitPlein"
        android:layout_alignStart="@+id/fruitPlein"
        android:contentDescription="@string/fruit_coupe" />

    <ImageView
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:id="@+id/fruitGraine"
        android:layout_marginRight="272dp"
        android:layout_marginEnd="272dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/fruit_graine" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/back3"
        android:id="@+id/imageView6"
        android:onClick="backToMenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="278dp"
        android:contentDescription="@string/avatar" />

</RelativeLayout>
