<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_memory_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_legumes"
    tools:context="kagura.project.com.a8.memory.MemoryMenu">

    <ImageView
        android:text="@string/niveau_2"
        android:onClick="startGame"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_2"
        app:srcCompat="@drawable/feuille_jaune"
        android:layout_below="@+id/level_1"
        android:layout_alignLeft="@+id/level_1"
        android:layout_alignStart="@+id/level_1"
        android:layout_marginTop="49dp" />

    <ImageView
        android:text="@string/niveau_3"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_3"
        app:srcCompat="@drawable/feuille_rouge"
        android:layout_below="@+id/level_2"
        android:layout_alignLeft="@+id/level_2"
        android:layout_alignStart="@+id/level_2"
        android:layout_marginTop="44dp" />


    <ImageView
        android:text="@string/niveau_1"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:layout_marginTop="33dp"
        android:id="@+id/level_1"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        app:srcCompat="@drawable/feuille_verte"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/level3"
        android:onClick="startGame"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_3tv"
        android:fontFamily="casual"
        android:minHeight="179dp"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_alignTop="@+id/level_3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/level2"
        android:onClick="startGame"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_2tv"
        android:fontFamily="casual"
        android:minHeight="179dp"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_alignTop="@+id/level_2"
        android:layout_alignLeft="@+id/level_3tv"
        android:layout_alignStart="@+id/level_3tv"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
        android:text="@string/level1"
        android:onClick="startGame"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_1tv"
        android:fontFamily="casual"
        android:minHeight="179dp"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_alignTop="@+id/level_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp" />

    <ImageView
        android:layout_width="350px"
        android:layout_height="350px"
        android:id="@+id/imageAvatar"
        android:padding="1dp"
        android:contentDescription="@string/hello_blank_fragment"
        android:layout_marginLeft="173dp"
        android:layout_marginStart="173dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="210dp"
        android:layout_height="210dp"
        app:srcCompat="@drawable/back1"
        android:id="@+id/imageView5"
        android:onClick="back"
        android:layout_marginTop="240dp"
        android:layout_marginRight="50dp"/>




</RelativeLayout>
