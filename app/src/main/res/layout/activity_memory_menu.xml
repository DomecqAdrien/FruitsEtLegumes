<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_memory_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/farback"
    tools:context="kagura.project.com.a8.memory.MemoryMenu">

    <Button
        android:text="@string/niveau_2"
        android:onClick="startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level_2"
        android:layout_below="@+id/level_1"
        android:layout_alignLeft="@+id/level_1"
        android:layout_alignStart="@+id/level_1"
        android:layout_marginTop="49dp" />

    <Button
        android:text="@string/niveau_3"
        android:onClick="startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level_3"
        android:layout_below="@+id/level_2"
        android:layout_alignLeft="@+id/level_2"
        android:layout_alignStart="@+id/level_2"
        android:layout_marginTop="44dp" />

    <Button
        android:text="@string/niveau_1"
        android:onClick="startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/level_1"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level_3"
        android:layout_toLeftOf="@+id/level_3"
        android:layout_marginRight="241dp"
        android:layout_marginEnd="241dp"
        android:id="@+id/imageAvatar"
        android:padding="1dp"
        android:contentDescription="@string/hello_blank_fragment" />

</RelativeLayout>
