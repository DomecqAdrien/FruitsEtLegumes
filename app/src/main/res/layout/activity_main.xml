<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_menu"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kagura.project.com.a8.MainMenu">

    <TextView
        android:layout_width="960dp"
        android:onClick="startGame"
        android:id="@+id/spaceAssociation"
        android:layout_height="540dp"
        android:layout_toStartOf="@+id/textHello"
        android:layout_toLeftOf="@+id/textHello" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bonjour"
        android:fontFamily="casual"
        android:id="@+id/textHello"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="36sp" />

    <TextView
        android:layout_width="960dp"
        android:layout_height="540dp"
        android:onClick="startGame"
        android:id="@+id/spaceMemory"

        android:layout_alignTop="@+id/textHello"
        android:layout_toRightOf="@+id/spaceAssociation"
        android:layout_toEndOf="@+id/spaceAssociation"
        android:layout_marginLeft="98dp"
        android:layout_marginStart="98dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:text="Memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:id="@+id/textView2"
        android:fontFamily="casual"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textHello"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:srcCompat="@drawable/memory"
        android:id="@+id/imageView2"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@+id/spaceAssociation"
        android:layout_toRightOf="@+id/textHello"
        android:layout_toEndOf="@+id/textHello"
        android:layout_marginBottom="14dp" />


</RelativeLayout>
