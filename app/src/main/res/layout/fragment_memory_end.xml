<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kagura.project.com.a8.memory.MemoryEndFragment">


    <Button
        android:text="Levels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonNextLevel"
        android:layout_alignRight="@+id/buttonHome"
        android:layout_alignEnd="@+id/buttonHome"
        android:onClick="goLevelMenu"
        android:id="@+id/buttonLevelSelection"
        android:layout_marginStart="152dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="464dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:text="Replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:onClick="replayLevel"
        android:id="@+id/buttonReplay"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        android:layout_marginEnd="152dp"
        android:layout_marginRight="152dp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonReplay"
        android:layout_alignLeft="@+id/buttonReplay"
        android:layout_alignStart="@+id/buttonReplay"
        android:onClick="nextLevel"
        android:id="@+id/buttonNextLevel"
        android:layout_marginEnd="152dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="152dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="176dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonReplay"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:onClick="goHome"
        android:id="@+id/buttonHome"
        app:layout_constraintBottom_toTopOf="@+id/buttonLevelSelection"
        android:layout_marginBottom="208dp"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="144dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="660dp"
        app:srcCompat="@drawable/tableau_resultat"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="32dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:text="Bravo !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="80sp"
        android:fontFamily="casual"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="608dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="608dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
