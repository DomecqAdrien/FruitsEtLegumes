<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_association_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_fruit"
    tools:context="kagura.project.com.a8.memory.MemoryMenu">


    <ImageView
        android:text="@string/niveau_2"
        android:onClick="startGame"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_2"
        app:srcCompat="@drawable/feuille_jaune_reverse"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:text="@string/niveau_1"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_1"
        app:srcCompat="@drawable/feuille_verte_reverse"
        android:layout_above="@+id/level_2tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp" />

    <ImageView
        android:text="@string/niveau_3"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_3"
        app:srcCompat="@drawable/feuille_rouge_reverse"
        android:layout_below="@+id/level_2"
         />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:id="@+id/imageAvatar"
        android:padding="1dp"
        android:contentDescription="@string/hello_blank_fragment"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/level1"
        android:onClick="startGame"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_1tv"
        android:fontFamily="casual"
        android:minHeight="179dp"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_marginTop="9dp"

        android:layout_alignTop="@+id/level_1"
        android:layout_alignRight="@+id/level_3tv"
        android:layout_alignEnd="@+id/level_3tv"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <ImageView
        android:text="@string/niveau_3"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/solution"
        app:srcCompat="@drawable/feuille_bleue"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageAvatar"
        android:layout_alignEnd="@+id/imageAvatar" />

    <TextView
        android:text="@string/level3"
        android:onClick="startGame"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_3tv"
        android:fontFamily="casual"
        android:minHeight="179dp"
        android:gravity="center"
        android:textSize="50sp"

        android:layout_marginTop="3dp"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp"
        android:layout_below="@+id/level_2"
        android:layout_alignRight="@+id/level_3"
        android:layout_alignEnd="@+id/level_3" />

    <TextView
        android:text="@string/level2"
        android:onClick="startGame"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_2tv"
        android:fontFamily="casual"
        android:minHeight="179dp"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_marginTop="2dp"

        android:layout_alignTop="@+id/level_2"
        android:layout_alignRight="@+id/level_1tv"
        android:layout_alignEnd="@+id/level_1tv"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

</RelativeLayout>
