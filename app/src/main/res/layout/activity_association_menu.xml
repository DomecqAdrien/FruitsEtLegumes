<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_association_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_fruit"
    tools:context="kagura.project.com.a8.memory.MemoryMenu">


    <ImageView
        android:text="@string/niveau_2"
        android:onClick="startGame"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_2"
        app:srcCompat="@drawable/feuille_jaune_reverse"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:text="@string/niveau_1"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_1"
        app:srcCompat="@drawable/feuille_verte_reverse"
        android:layout_above="@+id/level_2tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAvatar"
        app:srcCompat="@drawable/ver_gros"
        android:padding="1dp"
        android:contentDescription="@string/hello_blank_fragment"
        android:layout_toEndOf="@+id/level_2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/level_2" />

    <ImageView
        android:text="@string/niveau_3"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_3"
        app:srcCompat="@drawable/feuille_rouge_reverse"
        android:layout_below="@+id/level_2"
         />

    <TextView
        android:text="@string/level1"
        android:onClick="startGame"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_1tv"
        android:fontFamily="casual"
        android:minHeight="179dp"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_above="@+id/level_2"
        android:layout_alignRight="@+id/level_2tv"
        android:layout_alignEnd="@+id/level_2tv"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="11dp" />

    <TextView
        android:text="@string/level2"
        android:onClick="startGame"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_2tv"
        android:fontFamily="casual"
        android:minHeight="179dp"
        android:gravity="center"
        android:textSize="50sp"

        android:layout_alignTop="@+id/level_2"
        android:layout_alignRight="@+id/level_3tv"
        android:layout_alignEnd="@+id/level_3tv"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp" />

    <TextView
        android:text="@string/level3"
        android:onClick="startGame"
        android:layout_width="400dp"
        android:layout_height="172dp"
        android:id="@+id/level_3tv"
        android:fontFamily="casual"
        android:minHeight="179dp"
        android:gravity="center"
        android:textSize="50sp"

        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:layout_below="@+id/level_2"
        android:layout_toLeftOf="@+id/imageAvatar"
        android:layout_toStartOf="@+id/imageAvatar"
        android:layout_marginTop="11dp" />

</RelativeLayout>
