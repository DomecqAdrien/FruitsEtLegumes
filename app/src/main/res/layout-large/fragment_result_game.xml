<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    tools:context=".association.ResultFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="660dp"
        app:srcCompat="@drawable/tableau_resultat2"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/results" />


    <TextView
        android:text="@string/bravo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="80sp"
        android:fontFamily="casual"
        tools:layout_editor_absoluteY="70dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="49dp"
        tools:textStyle="bold"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:text="@string/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/next1"
        android:background="@android:color/transparent"
        android:onClick="nextLevel"
        android:id="@+id/buttonNextLevel"
        android:layout_marginRight="63dp"
        android:layout_marginEnd="63dp"
        android:contentDescription="@string/next"
        android:layout_marginBottom="160dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ver_mince"
        android:id="@+id/imageView4"
        android:layout_marginRight="87dp"
        android:layout_marginEnd="87dp"
        android:contentDescription="@string/avatar"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9"
        android:layout_marginBottom="95dp" />

    <ImageView
        android:text="@string/levels"
        android:layout_width="200dp"
        android:id="@+id/buttonLevelSelection"
        android:background="@android:color/transparent"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="97dp"
        android:layout_marginStart="97dp"
        android:contentDescription="@string/levels"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:text="@string/replay"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:onClick="replayLevel"
        android:id="@+id/buttonReplay"
        app:layout_constraintRight_toRightOf="@+id/imageView"

        android:background="@android:color/transparent"
        android:contentDescription="@string/replay"
        android:layout_above="@+id/buttonLevelSelection"
        android:layout_alignRight="@+id/buttonNextLevel"
        android:layout_alignEnd="@+id/buttonNextLevel"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="44dp" />

    <ImageView
        android:text="@string/home"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/buttonHome"
        android:background="@android:color/transparent"
        android:contentDescription="@string/home"
        android:layout_alignTop="@+id/buttonReplay"
        android:layout_alignLeft="@+id/buttonLevelSelection"
        android:layout_alignStart="@+id/buttonLevelSelection" />

</RelativeLayout>
