<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_foret"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:text="@string/start"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonStart"
        app:srcCompat="@drawable/ico"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="start"
        android:contentDescription="@string/start"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="@string/character_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/character_selection"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/whoru"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="14sp" />

    <TextView
        android:text="@string/whoru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whoru"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="22dp"
        android:textSize="14sp" />


    <EditText
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name"
        android:textSize="14sp"

        android:fontFamily="casual"
        app:layout_constraintBottom_toTopOf="@+id/character_selection"
        android:layout_marginEnd="240dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="240dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/nameIndicator"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.25" />

  

    <ImageView
        android:layout_width="120dp"
        app:srcCompat="@drawable/ver_gros_hd"
        android:id="@+id/buttonVerGros"
        android:onClick="CharacterOnClick"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/character_selection"
        android:layout_marginStart="192dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/avatar"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/ver_mince_hd"
        android:id="@+id/buttonVerMince"
        android:onClick="CharacterOnClick"
        app:layout_constraintLeft_toRightOf="@+id/buttonVerGros"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/character_selection"
        android:contentDescription="@string/avatar"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.060000002" />

    <TextView
        android:text="@string/prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameIndicator"
        app:layout_constraintRight_toLeftOf="@+id/whoru"
        app:layout_constraintBottom_toTopOf="@+id/character_selection"
        android:textSize="14sp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:text="@string/admin"
        app:srcCompat="@drawable/resultats"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonAdmin"
        android:onClick="adminSession"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="112dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/main"
        android:id="@+id/imageAssociation"
        android:rotation="-40"

        android:contentDescription="@string/avatar"
        app:layout_constraintTop_toTopOf="@+id/whoru"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="216dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="216dp"
        app:layout_constraintLeft_toLeftOf="@+id/name"
        app:layout_constraintHorizontal_bias="0.88" />

    <TextView
        android:text="@string/commencer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textGo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.71000004"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/buttonStart" />


</android.support.constraint.ConstraintLayout>
