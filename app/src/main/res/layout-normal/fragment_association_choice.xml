<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kagura.project.com.a8.association.semantique.SemantiqueChoiceFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="@string/graines"
        android:fontFamily="cursive"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/graines_tv"
        android:layout_alignBaseline="@+id/plantes_tv"
        android:layout_alignBottom="@+id/plantes_tv"
        android:layout_alignRight="@+id/graines"
        android:layout_alignEnd="@+id/graines" />

    <TextView
        android:text="@string/plantes"
        android:fontFamily="cursive"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plantes_tv"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_above="@+id/arbres"
        android:layout_alignRight="@+id/arbres"
        android:layout_alignEnd="@+id/arbres"
        android:layout_marginBottom="14dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="newGame"
        app:srcCompat="@drawable/fruit_graine_ananas"
        android:id="@+id/graines"
        android:contentDescription="@string/graines"
        android:layout_alignTop="@+id/arbres"
        android:layout_toRightOf="@+id/plantes_tv"
        android:layout_toEndOf="@+id/plantes_tv"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp" />

    <TextView
        android:text="@string/coupes"
        android:fontFamily="cursive"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fruits_coupes_tv"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp"
        android:layout_alignBaseline="@+id/plantes_tv"
        android:layout_alignBottom="@+id/plantes_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/fruit_coupe_ananas"
        android:id="@+id/coupes"
        android:onClick="newGame"
        android:contentDescription="@string/coupes"
        android:layout_alignTop="@+id/arbres"
        android:layout_alignRight="@+id/fruits_coupes_tv"
        android:layout_alignEnd="@+id/fruits_coupes_tv"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="newGame"
        app:srcCompat="@drawable/fruit_arbre_ananas"
        android:id="@+id/arbres"
        android:contentDescription="@string/plantes"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
