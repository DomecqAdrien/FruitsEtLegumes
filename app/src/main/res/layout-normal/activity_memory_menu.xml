<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_memory_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_legumes"
    tools:context=".association.memorielle.MemoryMenu">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageAvatar"
        android:padding="1dp"
        android:contentDescription="@string/hello_blank_fragment"
        android:layout_marginLeft="173dp"
        android:layout_marginStart="173dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80dp"
        app:srcCompat="@drawable/back3"
        android:id="@+id/buttonBack"
        android:onClick="back"
        android:contentDescription="@string/avatar"
        android:layout_height="80dp"
        android:layout_below="@+id/level_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:onClick="startGame"
        android:layout_width="200dp"
        android:layout_height="83dp"
        android:id="@+id/level_2"
        app:srcCompat="@drawable/feuille_jaune"
        android:contentDescription="@string/level2"
        android:layout_below="@+id/level_1tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="83dp"
        android:id="@+id/level_3"
        app:srcCompat="@drawable/feuille_rouge"
        android:contentDescription="@string/level2"
        android:layout_below="@+id/level_2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="@string/level3"
        android:onClick="startGame"
        android:layout_width="200dp"
        android:layout_height="83dp"
        android:id="@+id/level_3tv"
        android:fontFamily="casual"
        android:minHeight="179dp"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/level_3"
        android:layout_alignLeft="@+id/level_3"
        android:layout_alignStart="@+id/level_3" />

    <TextView
        android:text="@string/level2"
        android:onClick="startGame"
        android:layout_width="200dp"
        android:layout_height="83dp"
        android:id="@+id/level_2tv"
        android:fontFamily="casual"
        android:minHeight="179dp"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_below="@+id/level_1"
        android:layout_alignLeft="@+id/level_3tv"
        android:layout_alignStart="@+id/level_3tv" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="83dp"
        android:id="@+id/level_1"
        app:srcCompat="@drawable/feuille_verte"
        android:contentDescription="@string/level3"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/level1"
        android:onClick="startGame"
        android:layout_width="200dp"
        android:layout_height="83dp"
        android:id="@+id/level_1tv"
        android:minHeight="179dp"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_alignTop="@+id/level_1"
        android:layout_alignLeft="@+id/level_2tv"
        android:layout_alignStart="@+id/level_2tv"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />


</RelativeLayout>
