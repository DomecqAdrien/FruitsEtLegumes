<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_menu"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="kagura.project.com.a8.MainMenu">

    <TextView
        android:layout_width="960dp"
        android:onClick="startGame"
        android:id="@+id/spaceAssociation"
        android:layout_height="540dp"
        android:layout_toStartOf="@+id/textHello"
        android:layout_toLeftOf="@+id/textHello"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />


    <TextView
        android:layout_width="960dp"
        android:layout_height="540dp"
        android:onClick="startGame"
        android:id="@+id/spaceMemory"

        android:layout_alignTop="@+id/textHello"
        android:layout_toRightOf="@+id/spaceAssociation"
        android:layout_toEndOf="@+id/spaceAssociation"
        android:layout_marginLeft="98dp"
        android:layout_marginStart="98dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/bonjour"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:id="@+id/textHello"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="230dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/association"
        android:id="@+id/imageAssociation"
        android:contentDescription="@string/association"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <ImageView
        android:layout_width="230dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/memory"
        android:id="@+id/imageMemory"
        android:contentDescription="@string/memory"
        android:layout_alignTop="@+id/imageAssociation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />

    <TextView
        android:text="@string/memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/textView2"
        android:fontFamily="casual"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/spaceMemory"
        android:layout_alignStart="@+id/spaceMemory" />

    <TextView
        android:text="@string/association"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/textView3"
        android:fontFamily="casual"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textHello"
        android:layout_toLeftOf="@+id/spaceMemory"
        android:layout_toStartOf="@+id/spaceMemory" />


</RelativeLayout>
