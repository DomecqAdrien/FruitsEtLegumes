<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="10000"
        android:layout_alignBaseline="@+id/game"
        android:layout_alignBottom="@+id/game"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/time"
        android:text="10000"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:layout_alignBaseline="@+id/level"
        android:layout_alignBottom="@+id/level"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tries"
        android:text="10000"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:layout_alignBaseline="@+id/level"
        android:layout_alignBottom="@+id/level"
        android:layout_toLeftOf="@+id/level"
        android:layout_toStartOf="@+id/level" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:id="@+id/name"
        android:text="10000"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/date"
        android:layout_toEndOf="@+id/date"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level"
        android:text="10000"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:layout_alignBaseline="@+id/game"
        android:layout_alignBottom="@+id/game"
        android:layout_toLeftOf="@+id/time"
        android:layout_toStartOf="@+id/time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game"
        android:text="10000"
        android:textAlignment="center"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_toLeftOf="@+id/tries"
        android:layout_toStartOf="@+id/tries" />
</RelativeLayout>