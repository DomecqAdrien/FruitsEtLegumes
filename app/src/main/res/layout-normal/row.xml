<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="10000"
        android:layout_alignBaseline="@+id/game"
        android:layout_alignBottom="@+id/game"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text="10000"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_alignBaseline="@+id/tries"
        android:layout_alignBottom="@+id/tries"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tries"
        android:text="10000"
        android:layout_marginRight="84dp"
        android:layout_marginEnd="84dp"
        android:layout_alignBaseline="@+id/level"
        android:layout_alignBottom="@+id/level"
        android:layout_toLeftOf="@+id/time"
        android:layout_toStartOf="@+id/time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:id="@+id/name"
        android:text="10000"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/level"
        android:layout_toStartOf="@+id/level"
        android:layout_marginRight="116dp"
        android:layout_marginEnd="116dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level"
        android:text="10000"
        android:layout_marginRight="76dp"
        android:layout_marginEnd="76dp"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_toLeftOf="@+id/tries"
        android:layout_toStartOf="@+id/tries" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game"
        android:text="10000"
        android:textAlignment="center"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_toRightOf="@+id/date"
        android:layout_toEndOf="@+id/date" />
</RelativeLayout>