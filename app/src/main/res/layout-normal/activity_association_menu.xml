<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_association_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fruit"
    tools:context=".association.semantique.SemantiqueMenu">


    <ImageView
        app:srcCompat="@drawable/back4"
        android:onClick="back"
        android:id="@+id/buttonBack"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/avatar"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageAvatar"
        android:padding="1dp"
        android:contentDescription="@string/hello_blank_fragment"
        android:layout_marginRight="74dp"
        android:layout_marginEnd="74dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonBack"
        android:layout_toStartOf="@+id/buttonBack" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:id="@+id/level_3"
        app:srcCompat="@drawable/feuille_rouge_reverse"
        android:contentDescription="@string/level3"
        android:layout_below="@+id/buttonBack"
        android:layout_alignLeft="@+id/level_2"
        android:layout_alignStart="@+id/level_2" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:id="@+id/level_2"
        app:srcCompat="@drawable/feuille_jaune_reverse"
        android:contentDescription="@string/level2"
        android:layout_above="@+id/level_3"
        android:layout_alignLeft="@+id/level_1"
        android:layout_alignStart="@+id/level_1" />

    <TextView
        android:text="@string/level3"
        android:onClick="startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level_3tv"
        android:fontFamily="casual"
        android:gravity="center"

        android:layout_marginBottom="27dp"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/level_3"
        android:layout_alignLeft="@+id/level_3"
        android:layout_alignStart="@+id/level_3"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <TextView
        android:text="@string/level2"
        android:onClick="startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level_2tv"
        android:fontFamily="casual"
        android:gravity="center"
        android:textSize="21sp"

        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/level_3tv"
        android:layout_alignEnd="@+id/level_3tv" />

    <ImageView
        android:id="@+id/level_1"
        app:srcCompat="@drawable/feuille_verte_reverse"
        android:contentDescription="@string/level1"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_above="@+id/buttonBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:id="@+id/solution"
        android:onClick="startEncyclopedie"
        app:srcCompat="@drawable/feuille_bleue"
        android:contentDescription="@string/level3"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_above="@+id/buttonBack"
        android:layout_alignLeft="@+id/imageAvatar"
        android:layout_alignStart="@+id/imageAvatar" />

    <TextView
        android:text="@string/level1"
        android:onClick="startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level_1tv"
        android:fontFamily="casual"
        android:gravity="center"

        android:textSize="22sp"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/level_2"
        android:layout_alignLeft="@+id/level_3tv"
        android:layout_alignStart="@+id/level_3tv" />

    <TextView
        android:text="@string/encyclopedie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:fontFamily="casual"
        android:textSize="19sp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignTop="@+id/level_1tv"
        android:layout_toLeftOf="@+id/buttonBack"
        android:layout_toStartOf="@+id/buttonBack" />

</RelativeLayout>
